# --- build stage ---
FROM golang:1.22-alpine AS builder
WORKDIR /app
RUN apk add --no-cache git ca-certificates
COPY api/go.mod ./
RUN go mod download
COPY api/ ./
RUN go build -o /bin/server ./cmd/server

# --- run stage ---
FROM alpine:3.20
WORKDIR /app
ENV API_PORT=8080
COPY --from=builder /bin/server /bin/server
EXPOSE 8080
CMD ["/bin/server"]
