{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose:up",
      "type": "shell",
      "command": "docker compose -f deploy/docker-compose.yml up --build",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "compose:down",
      "type": "shell",
      "command": "docker compose -f deploy/docker-compose.yml down -v",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "web:dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/web" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "api:dev",
      "type": "shell",
      "command": "go run ./cmd/server",
      "options": { "cwd": "${workspaceFolder}/api" },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
